extends layout 
 
block content 
  h1= title 
 
  form(id='carsForm', action="/resource/resource/cars", method="POST") 
    div.form-group 
        label.carsAttr(for='car_company') car company 
        input#car_company(type='text', name='car_company') 
    div.form-group 
        label.carsAttr(for='color') color 
        input#color(type='text', name='color') 
    div.form-group 
        label.carsAttr(for='price') price 
        input#price(type='number', name='price') 
    input(type="submit") 
 
  script. 
    document.forms['carsForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 