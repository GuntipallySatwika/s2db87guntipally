extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let carsid = toShow._id 
    - let car_company = toShow.car_company 
    - let color = toShow.color
    - let price = toShow.price
    - let actionid = "/resource/resource/cars/" + carsid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='carsAttr mr-3') cars ID is: 
        div #{carsid} 
      div.row 
        div(class='carsAttr mr-3') cars company is: 
        div #{car_company} 
      div.row 
        div(class='carsAttr mr-3') color is: 
        div #{color} 
      div.row 
        div(class='carsAttr mr-3') price is: 
        div #{price} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the cars collection 
      window.location.href='/resource/resource/cars' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'       
      }).then((resp) => { 
        return resp.json();  
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/resource/resource/cars' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 